<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    tools:context=".checkProblem">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/Text1"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:padding="10dp"
                android:text="Start by describing the issue :"
                android:textColor="@color/black"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:padding="10dp"
                tools:ignore="MissingConstraints"
                android:background="@drawable/custom_buttontext"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="62dp">

                <ImageButton
                    android:id="@+id/image_Button_eye"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:padding="13dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/eyes" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="What do you see?"
                    android:textColor="@color/black"
                    android:textSize="17dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:background="@drawable/custom_buttontext"
                android:padding="10dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="233dp"
                tools:layout_editor_absoluteY="62dp">

                <ImageButton
                    android:id="@+id/image_Button_hear"
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:scaleType="center"
                    android:padding="13dp"
                    app:srcCompat="@drawable/hear" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="What do you hear?"
                    android:textColor="@color/black"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:padding="10dp"
                tools:ignore="MissingConstraints"
                android:background="@drawable/custom_buttontext"
                tools:layout_editor_absoluteX="233dp"
                tools:layout_editor_absoluteY="262dp">

                <ImageButton
                    android:id="@+id/image_Button_feel"
                    android:layout_width="match_parent"
                    android:layout_height="162dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:scaleType="center"
                    android:padding="13dp"
                    app:srcCompat="@drawable/feel" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="What do you feel?"
                    android:textColor="@color/black"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:background="@drawable/custom_buttontext"
                android:padding="10dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="262dp">

                <ImageButton
                    android:id="@+id/image_Button_smell"
                    android:layout_width="match_parent"
                    android:layout_height="209dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:padding="13dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/smell" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="What do you smell?"
                    android:textColor="@color/black"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@drawable/custom_buttontext"
                android:orientation="vertical"
                android:padding="10dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="462dp">

                <ImageButton
                    android:id="@+id/image_Button_notStart"
                    android:layout_width="match_parent"
                    android:layout_height="157dp"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    app:srcCompat="@drawable/notwork" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_margin="6dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="The vehicle won't start?"
                    android:textColor="@color/black"
                    android:textSize="17dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>